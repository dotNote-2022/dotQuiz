<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dotnote">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logolast"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logolast"
        android:supportsRtl="true"
        android:theme="@style/Theme.DotNote">
        <activity
            android:name="com.example.dotnote.ui.settings.SettingsActivity"
            android:exported="false"
            android:label="@string/title_activity_settings"
            android:configChanges="orientation|screenSize"/>
        <activity
            android:name="com.example.dotnote.ui.endingscreen.GameEndActivity"
            android:exported="false"
            android:configChanges="orientation|screenSize"/>
        <activity
            android:name=".EntryPage"
            android:exported="true"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.gamescreen.GameActivity"
            android:exported="false"
            android:theme="@style/Theme.DotNote"
            android:configChanges="orientation|screenSize"/>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.DotNote.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>